{
	"extends": "./tsconfig.app.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"verbatimModuleSyntax": false,
		"esModuleInterop": true,
		"baseUrl": "./",
		"paths": {"@/*": ["src/*"]},
		"isolatedModules": true
	},
	"include": ["src", "**/*.test.tsx", "**/*.test.ts"],
	"exclude": ["node_modules", "dist"]
}
